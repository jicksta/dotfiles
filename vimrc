call pathogen#runtime_append_all_bundles() 
colorscheme vividchalk
syntax on

set nocompatible
set number
set hidden
set hlsearch
set incsearch
set ruler
set bs=2
set visualbell
set wildmode=list:longest

set expandtab
set tabstop=2 shiftwidth=2 softtabstop=2
set autoindent

filetype on
filetype indent on
filetype plugin on

"noremap  <Up> ""
"noremap!  <Up> <Esc>
"noremap  <Down> ""
"noremap!  <Down> <Esc>
"noremap  <Left> ""
"noremap!  <Left> <Esc>
"noremap  <Right> ""
"noremap!  <Right> <Esc>
